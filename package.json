{
  "name": "big-dilly",
  "version": "1.0.0",
  "description": "Personal productivity web application with Todo and TimeSince features",
  "main": "src/server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon src/server/index.js",
    "dev:client": "vite build --watch",
    "build": "vite build",
    "start": "node src/server/index.js",
    "db:init": "node src/db/init.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "todo",
    "timesince",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.7.0",
    "cookie-parser": "^1.4.7",
    "express": "^4.21.2",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "svelte": "^5.20.1",
    "vite": "^6.0.11",
    "vitest": "^3.0.4"
  }
}
